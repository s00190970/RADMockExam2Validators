@model IEnumerable<Exam2.Models.Attendance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success " })
</p>
<table class="table table-striped table-hover table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ModuleAttended.ModuleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAttended.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendanceDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Present)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ModuleAttended.ModuleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAttended.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AttendanceDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Present)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.AttendanceID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Edit", "Edit", new { id = item.AttendanceID }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink("Delete", "Delete", new { id = item.AttendanceID }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
